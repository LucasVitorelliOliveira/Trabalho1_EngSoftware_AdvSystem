@{
    ViewData["Title"] = "Conversor de Documentos";
}


<div class="row">
    <div class="col s6 m7">
        <a asp-area="" asp-controller="ConversorDocumento" asp-action="IMGpPDF">
            <div class="card text-center">
                <div class="card-image">
                    <i class="large material-icons">image</i> 
                    <i class="large material-icons">arrow_forward_ios</i>
                    <i class="large material-icons">picture_as_pdf</i>
                </div>
                <div class="card-content">
                    <span class="card-title">IMAGEM para PDF</span>
                </div>
            </div>
        </a>
    </div>
    <div class="col s6 m7">
        <a asp-area="" asp-controller="ConversorDocumento" asp-action="PDFpIMG">
            <div class="card text-center">
                <div class="card-image">
                    <i class="large material-icons">picture_as_pdf</i>
                    <i class="large material-icons">arrow_forward_ios</i>
                    <i class="large material-icons">image</i>
                </div>
                <div class="card-content">
                    <span class="card-title">PDF para IMAGEM</span>
                </div>
            </div>
        </a>
    </div>
    <div class="col s6 m7">
        <a asp-area="" asp-controller="ConversorDocumento" asp-action="DOCpPDF">
            <div class="card text-center">
                <div class="card-image">
                    <i class="large material-icons">description</i>
                    <i class="large material-icons">arrow_forward_ios</i>
                    <i class="large material-icons">picture_as_pdf</i>
                </div>
                <div class="card-content">
                    <span class="card-title">OFFICE para PDF</span>
                </div>
            </div>
        </a>
    </div>
</div>
