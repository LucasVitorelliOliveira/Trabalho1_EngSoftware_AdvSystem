@{
    ViewData["Title"] = "Conversor de Documentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Converter Office para PDF</h3>

<hr />
<div class="row">
    <form method="post" asp-action="DOCpPDFConvert" enctype="multipart/form-data" class="col s12">
        <div class="row">
            <div class="input-field col s6">
                <input type="file" name="file" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <button type="submit" class="waves-effect btn light-blue"><i class="material-icons left">sync_alt</i>Converter</button>
            </div>
        </div>
    </form>
</div>
