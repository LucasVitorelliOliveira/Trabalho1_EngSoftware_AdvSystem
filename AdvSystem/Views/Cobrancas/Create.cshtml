@model AdvSystem.Models.Cobranca

@{
    ViewData["Title"] = "Em Aberto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Cadastrar</h3>

<hr />
<div class="row">
    <form asp-action="Create" class="col s12">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="input-field col s6">
                <select asp-for="ProcessoId" asp-items="ViewBag.ProcessoId">
                    <option value="">Selecionar</option>
                </select>
                <label>Processo</label>
            </div>
            <div class="input-field col s4">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <label asp-for="Parcela" class="control-label"></label>
                <input asp-for="Parcela" class="form-control" />
                <span asp-validation-for="Parcela" class="text-danger"></span>
            </div>
            <div class="input-field col s6">
                <label asp-for="JurosPrazo" class="control-label"></label>
                <input asp-for="JurosPrazo" class="form-control" />
                <span asp-validation-for="JurosPrazo" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <label asp-for="Data"></label>
                <input asp-for="Data" type="text" class="datepicker" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                    <p>
                        <label>
                            <input type="checkbox" asp-for="Pago" />
                            <span>Pago</span>
                        </label>
                    </p>
                </label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <button type="submit" class="waves-effect btn light-blue"><i class="material-icons left">add_circle</i>Cadastrar</button>
                <a asp-action="Index" class="waves-effect btn-flat"><i class="material-icons left">arrow_back</i>Voltar</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
