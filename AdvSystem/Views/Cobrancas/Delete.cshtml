@model AdvSystem.Models.Cobranca

@{
    ViewData["Title"] = "Em Aberto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Deletar</h1>

<h6>Tem certeza que deseja deletar os dados abaixo?</h6>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClienteId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClienteId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProcessoId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProcessoId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.JurosPrazo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.JurosPrazo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Parcela)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Parcela)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pago)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Pago == true)
            {
                <div>Sim</div>
            }
            else
            {
                <div>Não</div>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorAtualizado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorAtualizado)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div class="input-field col s12">
                <button type="submit" class="waves-effect btn red"><i class="small material-icons left">delete</i>Deletar</button>
                <a asp-action="Index" class="waves-effect btn-flat"><i class="material-icons left">arrow_back</i>Voltar</a>
            </div>
        </div>
    </form>
</div>
