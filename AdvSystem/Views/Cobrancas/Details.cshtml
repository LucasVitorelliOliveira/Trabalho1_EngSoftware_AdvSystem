        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorAtualizado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorAtualizado)
        </dd>
    </dl>
</div>
<div class="row">
    <div class="input-field col s12">
        <a class="waves-effect btn light-blue" asp-action="Edit" asp-route-id="@Model?.Id"><i class="small material-icons left">edit_note</i>Editar</a>
        <a asp-action="Index" class="waves-effect btn-flat"><i class="material-icons left">arrow_back</i>Voltar</a>
    </div>
</div>
