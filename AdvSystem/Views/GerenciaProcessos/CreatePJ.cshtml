@model AdvSystem.Models.GerenciaProcesso

@{
    ViewData["Title"] = "Processos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Adicionar Novo Processo</h3>

<hr />
<div class="row">
    <form asp-action="CreatePJ" class="col s12">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="input-field col s6">
                <label asp-for="NumeroProcesso" class="control-label"></label>
                <input asp-for="NumeroProcesso" class="form-control" />
                <span asp-validation-for="NumeroProcesso" class="text-danger"></span>
            </div>
            <div class="input-field col s6">
                <select asp-for="ClienteJId" asp-items="ViewBag.ClienteJId">
                    <option value="">Selecionar</option>
                </select>
                <label>Cliente</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <label asp-for="Movimentacoes" class="control-label"></label>
                <input asp-for="Movimentacoes" class="form-control" />
                <span asp-validation-for="Movimentacoes" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <button type="submit" class="waves-effect btn light-blue"><i class="material-icons left">add_circle</i>Criar</button>
                <a asp-action="Index" class="waves-effect btn-flat"><i class="material-icons left">arrow_back</i>Voltar</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
