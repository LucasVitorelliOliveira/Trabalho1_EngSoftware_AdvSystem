@model IEnumerable<AdvSystem.Models.GerenciaProcesso>

@{
    ViewData["Title"] = "Processos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Processos</h3>

<div>
    <a asp-action="Create" class="btn-floating btn-medium waves-effect waves-light grey darken-3"><i class="material-symbols-outlined left">shadow_add</i></a>
</div>
<table class="centered responsive-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumeroProcesso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClienteId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroProcesso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClienteId)
                </td>
                <td>
                    <a class="btn-floating btn-medium waves-effect light-blue" asp-action="Edit" asp-route-id="@item.Id"><i class="material-icons">edit_note</i></a>
                    <a class="btn-floating btn-medium waves-effect yellow darken-2" asp-action="Details" asp-route-id="@item.Id"><i class="material-icons">info</i></a>
                    <a class="btn-floating btn-medium waves-effect red darken-1" asp-action="Delete" asp-route-id="@item.Id"><i class="material-icons">delete</i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
